{
  "compilerOptions": {
    "strict": false,
    "useDefineForClassFields": true,
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
